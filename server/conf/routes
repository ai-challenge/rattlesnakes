GET     /                                      ai.rattlesnakes.server.controllers.IndexController.get

GET     /assets/*file                          controllers.Assets.at(path = "/public", file)

GET     /games                                 ai.rattlesnakes.server.controllers.games.GamesController.get

POST    /games                                 ai.rattlesnakes.server.controllers.games.GamesController.post

GET     /games/:gameId                         ai.rattlesnakes.server.controllers.games.GamesController.get(id: Int)

POST    /games/:gameId/players                 ai.rattlesnakes.server.controllers.games.PlayersController.post(gameId: Int)

GET     /games/:gameId/status                  ai.rattlesnakes.server.controllers.games.StatusController.get(gameId: Int)

GET     /games/:gameId/turns/:turn             ai.rattlesnakes.server.controllers.games.TurnsController.get(gameId: Int, turn: Int)

PUT     /games/:gameId/turns/:number/:player   ai.rattlesnakes.server.controllers.games.TurnsController.put(gameId: Int, number: Int, player)

